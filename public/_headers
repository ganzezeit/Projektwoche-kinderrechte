# Cache static assets for 1 year (hashed filenames change on update)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images, audio, videos for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

/audio/*
  Cache-Control: public, max-age=31536000, immutable

/videos/*
  Cache-Control: public, max-age=31536000, immutable

/slides/*
  Cache-Control: public, max-age=31536000, immutable

/sounds/*
  Cache-Control: public, max-age=31536000, immutable

# HTML must revalidate (SPA entry point)
/index.html
  Cache-Control: public, max-age=0, must-revalidate

# Service worker and manifest should revalidate
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

/manifest.json
  Cache-Control: public, max-age=0, must-revalidate
